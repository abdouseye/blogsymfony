{% extends 'base.html.twig' %}

{% block title %} Hello BlogController !{% endblock %}

{% block body %}



<section class="artcles">

  {% for article in articles %}

  <div class="for-row">

    <articles>
      <h2> {{ article.title }}</h2>
      <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }}
        dans
        la catégorie Politique</div>
      <div class="content">
        <img src="{{ article.image }}" alt="">
        {{ article.content | raw }}
        <a href="{{ path('blog_show', {'id': article.id}) }}" class="btn btn-primary">lire la suite</a>
      </div>
    </articles>

  </div>

  {% endfor %}






</section>




{% endblock %}